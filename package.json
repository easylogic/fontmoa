{
  "name": "fontmoa",
  "version": "0.0.12",
  "description": "Simple Font Manager for Cross Platform",
  "author": {
    "name": "easylogic",
    "email": "cyberuls@gmail.com",
    "url": "https://github.com/fontmoa"
  },
  "provider": "github",
  "repository": {
    "type": "git",
    "url": "https://github.com/fontmoa/fontmoa.git"
  },
  "main": "main.js",
  "homepage": "./",
  "dependencies": {
    "electron-log": "^2.2.9",
    "electron-updater": "^2.8.9",
    "extract-zip": "^1.6.5",
    "fontkit": "^1.7.7",
    "lodash": "^4.17.4",
    "mime": "^1.4.0",
    "nedb": "^1.8.0",
    "react": "^15.6.1",
    "react-children-utilities": "^0.1.14",
    "react-dom": "^15.6.1",
    "react-intersection-observer": "^1.0.0",
    "react-intl-universal": "^1.3.4",
    "react-scripts": "1.0.10",
    "request": "^2.81.0",
    "uuid": "^3.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "dev": "nf start",
    "postinstall": "electron-builder install-app-deps",
    "dist:mac": "npm run build && electron-builder -m",    
    "dist": "npm run build && electron-builder -mwl",
    "pack": "npm run build && electron-builder -mwl --x64 --ia32 --dir",
    "pub": "npm run build && electron-builder -mwl --x64 --ia32 --publish=always",
    "build-googlefont-list": "node ./scripts/build-googlefont-list.js"
  },
  "devDependencies": {
    "cheerio": "^1.0.0-rc.2",
    "electron": "^1.7.6",
    "electron-builder": "^19.27.7",
    "foreman": "^2.0.0",
    "node-fetch": "^1.7.2"
  },
  "build": {
    "productName": "Fontmoa",
    "appId": "com.fontmoa.fontmanager",
    "files": [
      "node_modules/",
      "main.js",
      "build/",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "owner": "fontmoa"
    },
    "deb" : {
      "compression": "gz"
    },
    "dmg": {
      "publish": [
        "github"
      ],
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "mac" : {
      "category": "public.app-category.utilities",
      "publish" : [
        "github"
      ],
      "target" : [
        "dmg", "zip"
      ]
    },
    "win": {
      "publish": [
        "github"
      ],
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "category": "Utility",
      "publish": [
        "github"
      ],
      "target": [
        "deb",
        "AppImage",
        "rpm"
      ]
    }
  }
}
