{
  "name": "fontmoa",
  "version": "0.1.0",
  "description": "Simple Font Manager for Cross Platform",
  "author": {
    "name": "easylogic",
    "email": "cyberuls@gmail.com",
    "url": "https://github.com/easylogic"
  },
  "provider": "github",
  "repository": {
    "type": "git",
    "url": "https://github.com/easylogic/fontmoa.git"
  },
  "main": "main.js",
  "homepage": "./",
  "dependencies": {
    "datauri": "^1.0.5",
    "emojson": "^1.0.0",
    "filesize": "^3.5.10",
    "fontkit": "^1.7.7",
    "nedb": "^1.8.0",
    "react": "^15.6.1",
    "react-children-utilities": "^0.1.14",
    "react-color": "^2.13.4",
    "react-dom": "^15.6.1",
    "react-intl-universal": "^1.2.1",
    "react-redux": "^5.0.5",
    "react-scripts": "1.0.10",
    "reactcss": "^1.2.2",
    "redux": "^3.7.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "dev": "nf start",
    "postinstall": "electron-builder install-app-deps",
    "dist": "npm run build && electron-builder",
    "pack": "npm run build && electron-builder --dir"
  },
  "devDependencies": {
    "electron": "^1.6.11",
    "electron-builder": "^19.18.0",
    "foreman": "^2.0.0"
  },
  "build": {
    "productName": "FontMoa",
    "appId": "com.fontmoa.fontmanager",
    "files": [
      "node_modules/",
      "main.js",
      "build/",
      "package.json"
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ]
    },
    "squirrelWindows": {
      "msi": true
    }
  }
}
